package numericalData;

import java.util.Scanner;

public class Exercise1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int num1;
		int num2 = 22;
		int num3 = 33;
		int num4 = 44;
		int num5 = 55;
		int num6 = 66;
		float num7 = 77;
		float num8 = 88;
		int sum;
		int sum2;
		int sum3;
		int sum4;
		float sum5;
		int average;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter your name: ");
		String name = sc.next();
		System.out.println("My name is " + name);
		
		System.out.println("Enter your CGPA: ");
		double CGPA = sc.nextDouble();
		
		System.out.println("Enter your grade for Maths in SPM: ");
		char mathGrade = sc.next().charAt(0);
		
		System.out.println("Your name is " + name);
		System.out.println("Your CGPA is " + CGPA);
		System.out.println("Your Math grade in SPM is " + mathGrade);
		
		System.out.println("Enter a number: ");
		num1 = sc.nextInt();
		
		sum = num1 + num2 + num3 + num4 + num5 + num6;
		sum2 = num6 - num1;
		sum3 = num1 * num2 * num3 * num4 * num5* num6;
		sum4 = num5 / num3;
		sum5 = num8 / num7;
		average = sum / 6;
		
		System.out.println("The sum is " + sum);
		
		System.out.println("The subtraction is " + sum2);
		
		System.out.println("The multiplication of all numbers is " + sum3);
		
		System.out.println("The division of 66 and 33 is " + sum4);
		
		System.out.print("The division of 88 and 77 is ");
		System.out.printf("%.2f",sum5);
		
		System.out.println("\nThe average of 6 numbers is " + average);
	}

}
